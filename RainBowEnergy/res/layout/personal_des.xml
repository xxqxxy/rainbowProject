<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_3"
    android:orientation="vertical" >
    
	<include layout="@layout/include_top_2"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
	
	<LinearLayout 
	    android:layout_width="match_parent" android:layout_height="match_parent"
	    android:orientation="vertical">
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="12dp"
	    android:id="@+id/rl_person"
	    android:layout_marginTop="16dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:background="@drawable/bg_cricle2"
	    
	    >
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/tv_person"
	        android:layout_centerVertical="true"
			android:textSize="20sp"
			android:textColor="@color/black"
	       />
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:paddingLeft="8dp"
	        android:src="@drawable/icon_look_more"
	        android:id="@+id/iv_more1"/>

	    
	    <com.comutils.rain_view.RoundImageViewByXfermode 
	       android:id="@+id/iv_person" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/icon_df_head"
	        android:layout_toLeftOf="@+id/iv_more1"/>
	    	    
	</RelativeLayout>
	
	
	<RelativeLayout 
	    android:id="@+id/rl_uname"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="12dp"
	    android:layout_marginTop="12dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:background="@drawable/bg_cricle2"
	    
	    >
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/tv_name"
	        android:layout_centerVertical="true"
			android:textSize="20sp"
			android:id="@+id/tv_name"
			android:textColor="@color/black"
	       />
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:paddingLeft="8dp"
	        android:src="@drawable/icon_look_more"
	        android:id="@+id/iv_more4"/>

	    
	    <EditText 
	        android:background="@null"
	        android:id="@+id/et_uname"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="网易"
	        android:textSize="18sp"
	        android:gravity="right"
	        android:textColor="@color/black"
	        android:layout_toLeftOf="@+id/iv_more4"
	        android:layout_toRightOf="@+id/tv_name"/>
	    	    
	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/rl_phone"
	     android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="12dp"
	    android:layout_marginTop="12dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:background="@drawable/bg_cricle2"
	    
	    >
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/tv_conect"
	        android:layout_centerVertical="true"
			android:textSize="20sp"
			android:id="@+id/tv_name2"
			android:textColor="@color/black"
	       />
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:paddingLeft="8dp"
	        android:src="@drawable/icon_look_more"
	        android:id="@+id/iv_more2"/>

	    
	    <EditText 
	        android:background="@null"
	        android:id="@+id/et_phone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:gravity="right"
	         android:phoneNumber="true"
	        android:textColor="@color/black"
	        android:layout_toLeftOf="@+id/iv_more2"
	        android:layout_toRightOf="@+id/tv_name2"/>
	    	    
	</RelativeLayout>
	
	
	<RelativeLayout
	    android:id="@+id/rl_site"
	     android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="12dp"
	    android:layout_marginTop="12dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:background="@drawable/bg_cricle2"
	    
	    >
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/tv_site2"
	        android:layout_centerVertical="true"
			android:textSize="20sp"
			android:id="@+id/tv_site2"
			android:textColor="@color/black"
	       />
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:paddingLeft="8dp"
	        android:src="@drawable/icon_look_more"
	        android:id="@+id/iv_more3"/>

	    
	   <TextView 
	        android:background="@null"
	        android:id="@+id/tv_site"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="110KV变电站"
	        android:textSize="16sp"
	        android:gravity="right|center"
	        android:singleLine="true"
	        android:ellipsize="middle"
	        android:layout_toRightOf="@+id/tv_site2"
	        android:textColor="@color/black"
	        android:layout_toLeftOf="@+id/iv_more3"/>
	    	    
	</RelativeLayout>
	</LinearLayout>
	
	<include layout="@layout/load_dialog"/>
    </FrameLayout>
</LinearLayout>
