<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/cu_cr_black"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <include android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/cu_com_header" />
    <GridView android:id="@+id/child_grid" android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_above="@+id/rl_foot"   android:layout_below="@+id/ll_head_cu" android:cacheColorHint="@android:color/transparent"
         android:gravity="center" android:horizontalSpacing="2.5dip"  android:verticalSpacing="2.5dip" 
        android:listSelector="@android:color/transparent"     android:numColumns="3"  
        android:scrollbars="none"     android:stretchMode="columnWidth"  android:layout_marginTop="2.5dip">
    </GridView>
    <RelativeLayout android:id="@+id/rl_foot" android:layout_width="match_parent"
        android:layout_height="48dp"  android:layout_alignParentBottom="true"
        android:background="@color/cu_cr_gray" >

        <TextView android:id="@+id/tv_album"  android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"  android:clickable="true"  android:padding="8dip"
            android:text="所有图片" android:textColor="@android:color/white" />

    </RelativeLayout>
   
</RelativeLayout>
