<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/cu_cr_gray"
    android:id="@+id/ll_head_cu"  android:layout_width="fill_parent" android:layout_height="wrap_content" >
    
    <TextView android:id="@+id/cu_tv_back" android:layout_width="wrap_content" android:layout_height="wrap_content" 
        android:drawableLeft="@drawable/cu_icon_left" android:paddingLeft="15dip"  android:paddingRight="20dip" 
        android:layout_centerVertical="true" />
    
    <TextView android:id="@+id/cu_tv_title"  android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="16sp" android:textColor="@color/cu_cr_white" android:layout_centerInParent="true"   android:paddingTop="13dip"  android:paddingBottom="13dip"/>

    <TextView android:id="@+id/cu_tv_complete" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/cu_tv_complete"   android:textSize="14sp" android:textColor="@color/cu_cr_white" android:background="@drawable/cu_bg_green"
        android:layout_centerVertical="true"  android:layout_alignParentRight="true"  android:gravity="center" android:layout_marginRight="10dip"
         android:paddingTop="5dip"  android:paddingBottom="5dip" android:paddingLeft="10dip" android:paddingRight="10dip"/>
</RelativeLayout>
