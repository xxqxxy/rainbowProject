<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/cu_cr_white" android:layout_marginRight="10dip"
    android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:layout_marginLeft="10dip">
    <TextView  android:id="@+id/cu_tv_title"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="15dip"
            android:textColor="@color/cu_cr_blue1"  android:textSize="18sp" />
    
     <ImageView android:layout_width="fill_parent" android:layout_height="1dip"  android:src="@color/cu_cr_blue1" />
     <LinearLayout  android:layout_width="fill_parent" android:layout_height="90dip"  android:orientation="horizontal">
          <com.comutils.wheelview.WheelView2 android:id="@+id/cu_wv_year" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0"/> 
          <com.comutils.wheelview.WheelView2 android:id="@+id/cu_wv_month" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0"/> 
          <com.comutils.wheelview.WheelView2 android:id="@+id/cu_wv_day" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0"/> 
     </LinearLayout>
     
      
      
      <ImageView android:layout_width="fill_parent" android:layout_height="1dip"  android:src="@color/cu_cr_blue1" />
      <LinearLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"
        >
       <TextView android:id="@+id/cu_tv_cancel" android:layout_height="wrap_content" android:layout_width="fill_parent"
             android:textColor="@color/cu_cr_black1" android:text="@string/cu_tv_cancel2" android:textSize="16sp" 
             android:gravity="center"  android:padding="15dip"  android:layout_weight="1.0"/>
     <ImageView android:layout_width="0.5dip" android:layout_height="fill_parent"  android:src="@color/cu_cr_blue1" />  
     <TextView android:id="@+id/cu_tv_yes" android:layout_height="wrap_content" android:layout_width="fill_parent"
             android:textColor="@color/cu_cr_blue1" android:text="@string/cu_tv_yes" android:textSize="16sp" 
             android:gravity="center"  android:padding="15dip"  
             android:layout_weight="1.0"/>   
    </LinearLayout>
</LinearLayout>
